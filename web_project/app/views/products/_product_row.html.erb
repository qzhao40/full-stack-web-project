<div class="well">

  <div class="row">
    <div class="col-xs-8">
      <h4><%= product.name %></small></h4>
      <h5><%= product.description %></small></h5>
      <p><%= image_tag (product.image_filename).to_s , hight:"160",width:"260" %></p>


    </div>
    <div class="col-xs-4">

      <%= form_for order_item, remote: true do |f| %>
      <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency product.price %></span></h4>
        <div class="input-group">
          
        </div>
        <div class="button">
          <%= f.hidden_field :product_id, value: product.id %>
          <%= link_to product.name, product %>
          <br></br>
        </div>
      <% end %>
    </div>

  </div>
</div>
