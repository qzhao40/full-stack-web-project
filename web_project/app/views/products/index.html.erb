<h2 class="text-center">Products for Sale</h2>
<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <% @products.each do |product| %>
    <div class="product" >
      <h3><%= product.name%></h3>
      <p>Product description: <%= product.description %></p>
      <p>Unit price: $<span style="color: green"><%= product.price%></span></p>
        <p><%= image_tag (product.image_filename).to_s , hight:"160",width:"225" %></p>
        <br></br>
        <br></br>
      </div>

    <% end %>

  </div>
</div>
